{
  "compilerOptions": {
    "target": "es2017", // Повышаем минимум до es2017 или выше
    "module": "node16", // Используем es2022 для поддержки ES-модулей
    "moduleResolution": "node16", // Используем Node.js resolution для модулей
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["jest", "node"],
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "__tests__"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
